    "# ====================================================================\n",
    "# [실험 1] 훈련 루프 실행 (LR=1e-4)\n",
    "# ====================================================================\n",
    "\n",
    "for epoch in range(nb_epochs_exp1):\n",
    "    # 훈련 모드로 설정\n",
    "    model_exp1.train()\n",
    "\n",
    "    running_loss = 0.0\n",
    "    correct_train = 0\n",
    "    total_train = 0\n",
    "\n",
    "    for batch_idx, batch in enumerate(train_loader): # train_loader는 3단계에서 정의됨\n",
    "        # 데이터를 디바이스로 이동\n",
    "        imgs = batch[\"image\"].to(device)\n",
    "        labels = batch[\"label\"].to(device)\n",
    "\n",
    "        # 그래디언트 초기화\n",
    "        optimizer_exp1.zero_grad()\n",
    "\n",
    "        # Forward pass\n",
    "        outputs = model_exp1(imgs)\n",
    "        loss = criterion_exp1(outputs, labels)\n",
    "\n",
    "        # Backward pass\n",
    "        loss.backward()\n",
    "\n",
    "        # 파라미터 업데이트\n",
    "        optimizer_exp1.step()\n",
    "\n",
    "        # 통계 업데이트\n",
    "        running_loss += loss.item()\n",
    "        _, predicted = torch.max(outputs.data, 1)\n",
    "        total_train += labels.size(0)\n",
    "        correct_train += (predicted == labels).sum().item()\n",
    "\n",
    "        # 100 배치마다 중간 결과 출력\n",
    "        if (batch_idx + 1) % 100 == 0:\n",
    "            current_loss = running_loss / (batch_idx + 1)\n",
    "            current_acc = 100 * correct_train / total_train\n",
    "            print(f\"Epoch [{epoch+1}/{nb_epochs_exp1}], Batch [{batch_idx+1}/{len(train_loader)}]\")\n",
    "            print(f\"  Loss: {current_loss:.4f}, Train Acc: {current_acc:.2f}%\")\n",
    "\n",
    "    # 에포크 종료 후 훈련 통계\n",
